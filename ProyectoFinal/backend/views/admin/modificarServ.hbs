<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar servicio</h4>
            <form method="POST" action="/admin/servicios/modificar">
                <input type="hidden" value="{{servicio.id}}" name='id'>
                <div class="form-group">
                    <input type="text" placeholder="Titulo" value="{{servicio.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <textarea placeholder="Descripcion" class="form-control" name="descripcion">{{servicio.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Icono (ej: fas fa-biking)" value="{{servicio.icono}}" class="form-control" name="icono">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
                <a href='/admin/servicios' title="Cancelar" class="btn btn-danger">Cancelar</a>
            </form>
        </div>
        {{#if error}}
            <h5>{{message}}</h5>
        {{/if}}
    </div>
</div>