<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Imagen</h4>
            <form method="POST" action="/admin/imagenes/modificar" enctype="multipart/form-data" class="formulario">
                <input type="hidden" value="{{imagen.id}}" name='id'>
                <div class="form-group">
                    <textarea placeholder="Descripcion" class="form-control" name="descripcion" required>{{imagen.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <label>Imagen:</label> {{{img_cloud}}}
                    <input type="file" class="form-control" id="imagen_nueva" name="imagen_nueva" required>
                    <input type="hidden" name="img_original" value="{{imagen.imagen_id}}">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
                <a href='/admin/imagenes' title="Cancelar" class="btn btn-danger">Cancelar</a>
            </form>
            
        </div>
        {{#if error}}
            <h5>{{message}}</h5>
        {{/if}}
    </div>
</div>